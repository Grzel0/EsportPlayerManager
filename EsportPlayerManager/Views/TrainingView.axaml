<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:EsportPlayerManager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EsportPlayerManager.Views.TrainingView">
    <UserControl.DataContext>
        <viewModels:TrainingViewModel />
    </UserControl.DataContext>

    <StackPanel Margin="10">
        <TextBlock Text="Treningi" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />

        <ListBox Items="{Binding Trainings}" Height="300">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding Type}" />
                        <TextBlock Text=" +{Binding SkillIncrease} skill, +{Binding FatigueIncrease} fatigue, +{Binding StressIncrease} stress" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>
