<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:EsportPlayerManager.ViewModels"
    xmlns:models="clr-namespace:EsportPlayerManager.Models"
    x:Class="EsportPlayerManager.Views.PlayersView"
    x:DataType="vm:PlayerViewModel">

  <UserControl.DataContext>
    <vm:PlayerViewModel />
  </UserControl.DataContext>

  <StackPanel Margin="10" Spacing="8">

    <TextBlock Text="Dodaj nowego gracza" FontSize="18" FontWeight="Bold"/>

    <StackPanel Orientation="Horizontal" Spacing="4">
      <TextBlock Text="ImiÄ™:" Width="60"/>
      <TextBox Text="{Binding NewPlayer.Name, Mode=TwoWay}" Width="200"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Spacing="4">
      <TextBlock Text="Pseudonim:" Width="60"/>
      <TextBox Text="{Binding NewPlayer.Nickname, Mode=TwoWay}" Width="200"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Spacing="4">
      <TextBlock Text="Gra:" Width="60"/>
      <TextBox Text="{Binding NewPlayer.Game, Mode=TwoWay}" Width="200"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Spacing="4">
      <TextBlock Text="Aim:" Width="60"/>
      <NumericUpDown Value="{Binding NewPlayer.Aim, Mode=TwoWay}" Minimum="0" Maximum="100" Width="150"/>
      <TextBlock Text="Strategy:" Width="60" Margin="10,0,0,0"/>
      <NumericUpDown Value="{Binding NewPlayer.Strategy, Mode=TwoWay}" Minimum="0" Maximum="100" Width="150"/>
      <TextBlock Text="Reflex:" Width="60" Margin="10,0,0,0"/>
      <NumericUpDown Value="{Binding NewPlayer.Reflex, Mode=TwoWay}" Minimum="0" Maximum="100" Width="150"/>
    </StackPanel>

    <Button Content="Dodaj gracza"
            Command="{Binding AddPlayerCommand}"
            Margin="0,10,0,20"/>

    <TextBlock Text="Lista graczy" FontSize="18" FontWeight="Bold"/>

    <ListBox ItemsSource="{Binding Players}">
      <ListBox.ItemTemplate>
        <DataTemplate x:DataType="models:Player">
          <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="{Binding Nickname}" FontWeight="Bold"/>
            <TextBlock Text=" ("/><TextBlock Text="{Binding Game}"/><TextBlock Text=")"/>
            <TextBlock Text=" Skill: "/><TextBlock Text="{Binding SkillLevel}"/>
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

  </StackPanel>
</UserControl>
