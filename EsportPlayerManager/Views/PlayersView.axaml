<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EsportPlayerManager.ViewModels"
             xmlns:global="clr-namespace:"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EsportPlayerManager.Views.PlayersView"
             x:DataType="global:PlayerViewModel">
    
    <UserControl.DataContext>
        <global:PlayerViewModel />
    </UserControl.DataContext>
    
    <StackPanel Margin="20">
        <TextBlock Text="Lista Graczy" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"></TextBlock>
        <ListBox ItemsSource="{Binding Players}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding Path=Nickname}" FontWeight="Bold" />
                        <TextBlock Text=" ("/><TextBlock Text="{Binding Path=Game}" /><TextBlock Text=") " />
                        <TextBlock Text="Skill: "/><TextBlock Text="{Binding Path=SkillLevel}" />
                        <TextBlock Text=" Stress: "/><TextBlock Text="{Binding Path=StressLevel}" Foreground="Red" />
                        <TextBlock Text=" Fatigue: "/><TextBlock Text="{Binding Path=FatigueLevel}" Foreground="Orange" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <Button Content="Dodaj nowego Gracza" Command="{Binding AddPlayerCommand}" Margin="0,10,0,0" HorizontalAlignment="Left"/> 
    </StackPanel>
</UserControl>
